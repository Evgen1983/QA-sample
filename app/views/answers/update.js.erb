<% if @answer.errors.present? %>
  <% @answer.errors.full_messages.each do |message| %>
    $('.answer-edit-errors').append('<ul><li><%= j message %></li></ul>');
  <% end %>
<% else %>
  <% if remotipart_submitted? %>
    $('<%= "#answer-#{ @answer.id }" %>').replaceWith("<%= j "#{ render "answer", answer: @answer }" %>");
  <% else %>
    $('<%= "#answer-#{ @answer.id }" %>').replaceWith("<%= j render "answer", answer: @answer %>");
  <% end %>
  $('.answer-edit-errors').empty();
<% end %>